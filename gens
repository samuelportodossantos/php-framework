<?php

#autoload
include_once "./autoload.php";

$commandList = ['migrate'];
$command = $argv[1];

if ( !in_array($command, $commandList) ) {
    print "Use um dos comandos da lista\n\n";
    foreach ($commandList as $com) {
        print $com."\n";
    }
    exit;
}

switch ($command) {
    case 'migrate':
        $migrate = new DefaultMigration();
        $migrate->makeMigrations();
        break;
    default:
        # code...
        break;
}